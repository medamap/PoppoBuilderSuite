{
  "github": {
    "owner": "medamap",
    "repo": "PoppoBuilderSuite"
  },
  "claude": {
    "maxConcurrent": 2,
    "timeout": 86400000
  },
  "polling": {
    "interval": 300000
  },
  "commentHandling": {
    "enabled": true,
    "completionKeywords": [
      "ありがとう", "ありがとうございます", "ありがとうございました",
      "完了", "OK", "ok", "了解", "承知",
      "thank you", "thanks", "done", "complete"
    ],
    "maxCommentCount": 10,
    "timeoutHours": 24
  },
  "dashboard": {
    "enabled": true,
    "port": 3001,
    "host": "localhost",
    "updateInterval": 5000,
    "authentication": {
      "enabled": false,
      "username": "admin",
      "password": "changeme"
    }
  },
  "rateLimiting": {
    "initialBackoffDelay": 1000,
    "maxBackoffDelay": 300000,
    "backoffMultiplier": 2,
    "backoffJitter": 0.1
  },
  "taskQueue": {
    "maxQueueSize": 100,
    "priorityLevels": {
      "dogfooding": 100,
      "high": 75,
      "normal": 50,
      "low": 25
    }
  },
  "dynamicTimeout": {
    "enabled": false,
    "minTimeout": 600000,
    "maxTimeout": 86400000,
    "timeoutProfiles": {
      "misc": 1800000,
      "dogfooding": 7200000,
      "documentation": 3600000,
      "complex": 21600000,
      "feature": 7200000,
      "bug": 3600000
    },
    "complexityFactors": {
      "enableLearning": true,
      "learningWeight": 0.5
    }
  },
  "agentMode": {
    "enabled": true,
    "pollingInterval": 3000,
    "autoRestart": true,
    "taskMapping": {
      "labels": {
        "review": ["code-review"],
        "documentation": ["generate-docs", "update-readme"],
        "security": ["security-audit"],
        "refactor": ["refactoring-suggestion"],
        "dogfooding": ["code-review", "generate-docs"]
      },
      "keywords": {
        "レビュー": ["code-review"],
        "review": ["code-review"],
        "ドキュメント": ["generate-docs"],
        "document": ["generate-docs"],
        "セキュリティ": ["security-audit"],
        "security": ["security-audit"],
        "リファクタリング": ["refactoring-suggestion"],
        "refactor": ["refactoring-suggestion"]
      }
    }
  },
  "errorLogCollection": {
    "enabled": true,
    "pollingInterval": 300000,
    "logSources": ["poppo-*.log"],
    "errorLevels": ["ERROR", "FATAL"],
    "labels": {
      "bug": "task:bug",
      "defect": "task:defect",
      "specIssue": "task:spec-issue"
    },
    "autoRepair": {
      "enabled": true,
      "maxRetries": 3,
      "testTimeout": 60000,
      "enableTestGeneration": true,
      "enableRollback": true,
      "dryRun": false,
      "confidenceThreshold": 0.8,
      "repairablePatterns": ["EP001", "EP002", "EP003", "EP004", "EP010"],
      "autoCreatePR": true,
      "requireValidation": true,
      "learningEnabled": true
    },
    "advanced": {
      "claudeAnalysis": true,
      "groupSimilarErrors": true,
      "statisticsEnabled": true
    },
    "thresholds": {
      "minOccurrencesForIssue": 1,
      "groupingSimilarity": 0.8,
      "autoRepairConfidence": 0.9,
      "minOccurrencesForLearning": 3
    },
    "logRotation": {
      "enabled": false,
      "maxFileSize": "100MB",
      "maxFiles": 4,
      "compress": true
    }
  },
  "sla": {
    "enabled": true,
    "metricsRetentionDays": 30,
    "checkInterval": 60000,
    "reportSchedule": {
      "weekly": "0 0 * * 0",
      "monthly": "0 0 1 * *"
    },
    "alerts": {
      "channels": ["log", "github-issue"],
      "errorBudgetWarningThreshold": 0.2,
      "errorBudgetCriticalThreshold": 0.8
    },
    "customSLOs": {
      "comment": "カスタムSLO定義をここに追加できます"
    }
  },
  "memoryManagement": {
    "enabled": true,
    "checkInterval": 60000,
    "memoryThreshold": 500,
    "heapThreshold": 0.85,
    "gcInterval": 300000,
    "leakDetectionSamples": 5,
    "autoRecoveryEnabled": true,
    "heapSnapshotEnabled": false,
    "heapSnapshotPath": "./heap-snapshots",
    "heapSnapshotInterval": 3600000,
    "autoRecovery": {
      "enabled": true,
      "actions": {
        "clearCache": true,
        "reduceWorkers": false,
        "pauseNewTasks": false,
        "forceGC": true
      },
      "recoveryThreshold": 0.8
    }
  },
  "ccsp": {
    "enabled": true,
    "port": 3003,
    "maxConcurrentRequests": 5,
    "throttleDelay": 1000,
    "enableMetrics": true,
    "enableDashboard": true,
    "autoOptimization": false,
    "queueManager": {
      "maxQueueSize": 10000,
      "schedulerInterval": 5000,
      "priorityWeights": {
        "urgent": 1000,
        "high": 100,
        "normal": 10,
        "low": 1
      }
    },
    "usageMonitor": {
      "windowSize": 3600000,
      "maxDataPoints": 1440,
      "alertThreshold": 0.8,
      "predictionWindow": 1800000
    },
    "claudeExecutor": {
      "maxRetries": 3,
      "retryDelay": 5000,
      "timeout": 120000,
      "tempDir": "/tmp/ccsp-claude"
    },
    "notifications": {
      "enableGitHub": true,
      "enableSlack": false,
      "enableEmail": false,
      "githubRepo": "medamap/PoppoBuilderSuite"
    },
    "prometheus": {
      "enabled": true,
      "prefix": "ccsp_",
      "endpoint": "/metrics"
    },
    "redis": {
      "host": "localhost",
      "port": 6379,
      "retryDelayOnFailover": 100,
      "maxRetriesPerRequest": 3
    },
    "sessionMonitoring": {
      "enabled": true,
      "checkInterval": 300000,
      "timeoutWarnings": 3
    },
    "emergencyStop": {
      "enabled": true,
      "patterns": {
        "sessionTimeout": ["Invalid API key", "Please run /login", "API Login Failure"],
        "rateLimit": ["usage limit reached", "rate limit", "too many requests"]
      }
    }
  },
  "productionLogging": {
    "enabled": true,
    "structuredLogging": true,
    "performanceTracking": true,
    "securityAudit": true,
    "errorCorrelation": true,
    "sensitiveDataMasking": true,
    "logRetentionDays": 30,
    "maxLogFileSize": 104857600,
    "compressionEnabled": true,
    "aggregation": {
      "enabled": true,
      "interval": 300000,
      "centralLogDir": "logs/aggregated",
      "sourceDirectories": [
        "logs",
        "dashboard/logs",
        "agents/*/logs"
      ]
    }
  },
  "performanceMonitoring": {
    "enabled": true,
    "metricsInterval": 1000,
    "profileInterval": 60000,
    "historyRetention": 86400000,
    "alertThresholds": {
      "cpu": 80,
      "memory": 85,
      "eventLoopLag": 100,
      "gcPauseDuration": 50
    },
    "optimization": {
      "enabled": true,
      "aggressiveness": "moderate",
      "interval": 300000,
      "learningEnabled": true
    },
    "profiling": {
      "enabled": true,
      "gcTracking": true,
      "operationTracking": true
    }
  },
  "security": {
    "audit": {
      "enabled": true,
      "interval": 3600000,
      "strictMode": true,
      "autoRemediation": false,
      "alertThresholds": {
        "criticalFindings": 1,
        "highFindings": 3,
        "mediumFindings": 10
      }
    },
    "accessControl": {
      "enabled": true,
      "sessionTimeout": 3600000,
      "maxFailedAttempts": 5,
      "lockoutDuration": 900000,
      "tokenExpiration": 86400000,
      "enableRateLimit": true,
      "enableAuditLog": true
    },
    "encryption": {
      "algorithm": "aes-256-gcm",
      "keyDerivation": "pbkdf2",
      "iterations": 100000
    },
    "headers": {
      "enableSecurityHeaders": true,
      "strictTransportSecurity": true,
      "contentSecurityPolicy": true,
      "xFrameOptions": "DENY",
      "xContentTypeOptions": "nosniff"
    }
  },
  "scalability": {
    "enabled": true,
    "loadTesting": {
      "enabled": true,
      "maxConcurrentUsers": 100,
      "maxDuration": 300000,
      "rampUpTime": 30000,
      "rampDownTime": 15000,
      "testTypes": ["load", "stress", "spike", "endurance"],
      "reportingInterval": 5000
    },
    "capacityPlanning": {
      "enabled": true,
      "forecastHorizon": 30,
      "confidenceLevel": 0.95,
      "scalingBuffer": 0.2,
      "costPerCore": 0.05,
      "costPerGB": 0.01,
      "targetUtilization": 0.75
    },
    "autoScaling": {
      "enabled": true,
      "evaluationInterval": 60000,
      "scaleUpCooldown": 300000,
      "scaleDownCooldown": 600000,
      "maxScaleUpEvents": 3,
      "maxScaleDownEvents": 2,
      "emergencyScalingEnabled": true,
      "predictiveScalingEnabled": true,
      "costOptimizationEnabled": true
    },
    "reportingInterval": 300000
  },
  "deployment": {
    "enabled": true,
    "strategy": "rolling",
    "healthCheckTimeout": 300000,
    "rollbackTimeout": 180000,
    "maxRetries": 3,
    "environments": ["development", "staging", "production"],
    "defaultEnvironment": "development",
    "services": {
      "poppo-builder": {
        "port": 3000,
        "healthCheck": "/health",
        "dependencies": ["redis"]
      },
      "dashboard": {
        "port": 3001,
        "healthCheck": "/api/health",
        "dependencies": []
      },
      "redis": {
        "port": 6379,
        "healthCheck": "ping",
        "dependencies": []
      }
    },
    "staging": {
      "url": "https://staging.poppobuilder.com",
      "database": {
        "type": "postgresql",
        "host": "staging-db.internal"
      }
    },
    "production": {
      "url": "https://poppobuilder.com",
      "database": {
        "type": "postgresql",
        "host": "prod-db.internal"
      },
      "monitoring": {
        "enabled": true
      }
    }
  },
  "monitoring": {
    "enabled": true,
    "dashboardPort": 3004,
    "dashboardHost": "localhost",
    "dashboardAuth": false,
    "dashboardUsername": "admin",
    "dashboardPassword": "changeme",
    "metricsCollection": {
      "interval": 10000,
      "retentionPeriod": 86400000,
      "enableSystemMetrics": true,
      "enableApplicationMetrics": true,
      "enableBusinessMetrics": true,
      "prometheusEnabled": true
    },
    "alerting": {
      "evaluationInterval": 30000,
      "aggregationWindow": 300000,
      "cooldownPeriod": 3600000,
      "maxAlertsPerRule": 10,
      "enableNotifications": true,
      "notificationChannels": ["console", "log"],
      "defaultAlertRules": {
        "cpu": { "warning": 80, "critical": 95 },
        "memory": { "warning": 85, "critical": 95 },
        "disk": { "warning": 80, "critical": 90 },
        "errorRate": { "warning": 5, "critical": 10 },
        "responseTime": { "warning": 5, "critical": 10 },
        "successRate": { "warning": 90, "critical": 80 },
        "queueSize": { "warning": 50, "critical": 100 }
      }
    },
    "integrations": {
      "slack": {
        "enabled": false,
        "webhookUrl": ""
      },
      "email": {
        "enabled": false,
        "smtpServer": "",
        "recipients": []
      },
      "github": {
        "enabled": true,
        "createIssueOnCritical": true,
        "labelPrefix": "alert"
      }
    }
  },
  "backup": {
    "enabled": true,
    "backupPath": "./backups",
    "encryptionEnabled": true,
    "compressionEnabled": true,
    "compressionLevel": 6,
    "retentionDays": 30,
    "maxBackups": 10,
    "scheduleEnabled": true,
    "schedule": "0 2 * * *",
    "incrementalEnabled": true,
    "items": ["config", "state", "database", "logs", "uploads"],
    "excludePatterns": ["*.tmp", "*.log.gz", "node_modules"],
    "storageBackends": {
      "local": {
        "enabled": true,
        "path": "./backups"
      },
      "s3": {
        "enabled": false,
        "bucket": "",
        "region": "",
        "accessKeyId": "",
        "secretAccessKey": ""
      }
    }
  },
  "disasterRecovery": {
    "enabled": true,
    "rto": 3600000,
    "rpo": 86400000,
    "healthCheckTimeout": 300000,
    "verificationRetries": 3,
    "autoFailoverEnabled": false,
    "testingEnabled": true,
    "testingSchedule": "monthly",
    "recoveryPlan": "default",
    "notifications": {
      "onRecoveryStart": true,
      "onRecoveryComplete": true,
      "onRecoveryFail": true,
      "onTestComplete": true
    },
    "failoverTargets": {
      "primary": {
        "url": "https://poppobuilder.com",
        "healthCheck": "/health"
      },
      "secondary": {
        "url": "https://backup.poppobuilder.com",
        "healthCheck": "/health"
      }
    }
  }
}